{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ApprovalPack",
  "type": "object",
  "additionalProperties": false,
  "required": ["pack_id", "task_id", "items"],
  "properties": {
    "pack_id": {"type": "string"},
    "task_id": {"type": "string"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["approval_id", "type", "summary", "owner_role", "blocking"],
        "properties": {
          "approval_id": {"type": "string"},
          "type": {"type": "string", "enum": ["METRIC_DEFINITION", "SECURITY", "PROD_RELEASE", "COST_BUDGET"]},
          "summary": {"type": "string"},
          "owner_role": {"type": "string"},
          "blocking": {"type": "boolean"}
        }
      }
    }
  }
}
